<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imgPRO"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="12dp"
        android:src="@drawable/pro_version" />

    <TextView
        android:id="@+id/tvProTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imgPRO"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="The Pro Version Unlocks:"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvFeatures"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvProTitle"
        android:layout_alignStart="@id/tvProTitle"
        android:layout_alignLeft="@id/tvProTitle"
        android:layout_marginTop="16dp"
        android:gravity="start|left"
        android:text="@string/pro_version_unlocks"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <Button
        android:id="@+id/unlock_pro_button"
        style="@style/button_accent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="30dp"
        android:textSize="21sp"
        android:padding="5dp"
        android:backgroundTint="#E6714A"
        android:text="@string/unlock_pro" />
</RelativeLayout>
